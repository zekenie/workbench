{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "declaration": true,

    "outDir": "./types",

    "lib": ["nodenext"],
    "target": "nodenext",
    "module": "nodenext",
    "moduleDetection": "force",
    "moduleResolution": "nodenext",
    "allowJs": true,
  }
}